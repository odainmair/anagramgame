<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BaseTextStyle">
        <item name="android:fontFamily">@font/avenir_book</item>
    </style>

    <style name="Button_secondary" parent="BaseTextStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@color/sec_btn_enabled_disabled_text_selector</item>
    <item name="android:background">@drawable/secondary_enabled_disabled_btn</item>
</style>
    <style name="Button_primary" parent="BaseTextStyle">

        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btn_enabled_disabled_text_selector</item>
        <item name="android:background">@drawable/rounded_corner_enabled_disabled_btn</item>
    </style>


</resources>
